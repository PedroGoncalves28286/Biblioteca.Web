@{
    ViewData["Title"] = "Home Page";
}

<main role="main" class="container">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Our Library</h1>
        <p class="lead">Explore our vast collection of books and resources.</p>
        <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Books" asp-action="Index">Browse Books</a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h2 class="mb-4">Featured Book</h2>
            <!-- Add featured books here using custom styles -->
            <div class="feature-section">
                <p>A story about inequality in France. Sounds interesting?</p>
                <a class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Details" asp-route-id="2">Learn More</a>
            </div>
        </div>
        <div class="col-md-6">
            <h2 class="mb-4">Latest News</h2>
            <!-- Add latest news or announcements here using custom styles -->
            <div class="feature-section">
                <p>Check the latest news or announcements here:</p>
                <a class="btn btn-primary" asp-area="" asp-controller="Newsletters" asp-action="Index">Read More</a>
            </div>
        </div>
    </div>
</main>
