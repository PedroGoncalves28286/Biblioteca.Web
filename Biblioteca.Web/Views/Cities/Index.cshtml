@model IEnumerable<Biblioteca.Web.Data.Entities.City>
@{
    ViewData["Title"] = "Index";
}

<h2>Cities</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success" id="successMessageContainer">
        @ViewBag.SuccessMessage
    </div>
}


<p>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LibrariesNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LibrariesNumber)
                </td>
                <td id="@item.Id">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn">
                        <i class="fa-solid fa-pen-to-square fa-lg" style="color: #9A8174;"></i> Edit</a>

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn">
                        <i class="fa-solid fa-info fa-lg" style="color: #9A8174;"></i> Details</a>

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn" id="btnDelete">
                        <i class="fa-solid fa-trash-can fa-lg" style="color: #9A8174;"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete</h4>
                <!-- Move the close button to the right -->
                <button type="button" class="close pull-right" data-dismiss="modal"><i class="fa fa-window-close"></i></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this item?</p>
            </div>
            <div class="modal-footer">
                <!-- Place the "No" button on the left -->
                <button type="button" class="btn btn-success" id="btnNoDelete">No</button>
                <!-- Place the "Delete" button on the right -->
                <button type="button" class="btn btn-danger" id="btnYesDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            var id = 0;
            $('a[id*=btnDelete]').click(function () {
                debugger;
                id = $(this).parent()[0].id;
                $("#deleteDialog").modal('show');
                return false;
            });
            $("#btnNoDelete").click(function () {
                $("#deleteDialog").modal('hide');
                return false;
            });
            $("#btnYesDelete").click(function () {
                window.location.href = '/Cities/Delete/' + id;
            });

            // Set a timeout to hide the success message after 7 seconds
            setTimeout(function () {
                $("#successMessageContainer").fadeOut("slow"); // Hide the message with a fade-out effect
            }, 7000); // 7 seconds
        });
    </script>
}

