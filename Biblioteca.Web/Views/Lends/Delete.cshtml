@model Biblioteca.Web.Data.Entities.Lend

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Lend Record</h1>

<p>Are you sure you want to delete this lend record?</p>

<dl class="row">
    <dt class="col-sm-2">Lend Date:</dt>
    <dd class="col-sm-10">@Model.LendDate</dd>
    <!-- Add other details here -->
</dl>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

