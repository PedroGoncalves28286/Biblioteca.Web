@model IEnumerable<Biblioteca.Web.Data.Entities.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Authors</h1>


    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
        {
        <p>
        <a asp-action="Create" class="btn"> <i class="fa-solid fa-plus fa-fade fa-2xl" style="color: #9A8174;"></i> Add Author</a>
        </p>
        }

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.AuthorImageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageFullPath))
                    {
                        <img src="@Url.Content(item.ImageFullPath)" alt="Image" style=" width:100px; height:150px;max-width:100%; height:auto">
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
                
                <td>
                    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn"> <i class="fa-solid fa-pen-to-square fa-lg" style="color: #9A8174;"></i> Edit</a> @*EDIT BUTTON*@
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn"> <i class="fa-solid fa-trash-can fa-lg" style="color: #9A8174;"></i> Delete</a> @*DELETE BUTTON*@
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn"> <i class="fa-solid fa-info fa-lg" style="color: #9A8174;"></i>Details</a> @*DETAILS BUTTON*@
                    
            </td>
                
        </tr>
}
    </tbody>
</table>
