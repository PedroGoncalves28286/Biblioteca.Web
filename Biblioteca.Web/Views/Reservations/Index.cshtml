@model IEnumerable<Biblioteca.Web.Data.Entities.Reservation>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary"> Add Reservation</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Borrower)
            </th>
            <th>
                Reservation Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Borrower)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationNumber)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> @*EDIT BUTTON*@
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a> @*DELETE BUTTON*@
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> @*DETAILS BUTTON*@
            </td>
        </tr>
}
    </tbody>
</table>
